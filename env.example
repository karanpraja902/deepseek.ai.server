# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/deepseek-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# IMPORTANT: Set this to your production domain in production (e.g., https://yourdomain.com)
# For local development, use: http://localhost:5000
# For production, use: https://deepseek-ai-server.vercel.app
BACKEND_URL=https://deepseek-ai-server.vercel.app

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Client URL (for CORS)
# For local development: http://localhost:3000
# For production: https://deepseek-ai-client.vercel.app
# Note: Common production origins are automatically included in CORS
CLIENT_URL=https://deepseek-ai-client.vercel.app

# AI Service Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key

# OpenRouter Model-Specific API Keys
DEEPSEEK_R1_API_KEY=your-deepseek-r1-api-key
LLAMA_31_API_KEY=your-llama-31-api-key
GPT_OSS_API_KEY=your-gpt-oss-api-key
# Add other model-specific API keys as needed

# Web Search Configuration
SEARCHAPI_KEY=your-searchapi-key

# Weather API Configuration
OPENWEATHER_API_KEY=your-openweather-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
